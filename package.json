{
  "name": "harmony_vpk_tool",
  "version": "1.0.0",
  "description": "An electron-based app for unpacking Respawn VPK files.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:windows": "electron-builder --win --x64 --publish never",
    "build:linux": "electron-builder --linux --publish never"
  },
  "author": "HarmonyTF",
  "license": "GPLv3",
  "dependencies": {
    "electron-json-storage": "^4.5.0"
  },
  "devDependencies": {
    "electron": "^19.0.6",
    "electron-builder": "^23.1.0"
  },
  "productName": "Harmony VPK Tool",
  "build": {
    "appId": "com.harmony.vpktool",
    "directories": {
      "output": "builds"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!out/**/*",
      "!builds/**/*",
      "!screenshots/**/*"
    ],
    "win": {
      "icon": "img/harmony.ico",
      "target": [
        "portable"
      ]
    },
    "linux": {
      "icon": "img/harmony.png",
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  }
}
